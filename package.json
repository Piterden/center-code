{
  "name": "center-code",
  "description": "Shows the file's source centered in the terminal",
  "main": "index.js",
  "version": "0.0.0-semantic-release",
  "scripts": {
    "test": "mocha src/*-spec.js spec/*-spec.js",
    "lint": "eslint index.js bin/*.js src/*.js",
    "example": "./bin/center-code.js example/small.js",
    "shebang": "./bin/center-code.js example/small-with-shebang.js",
    "cat": "cat example/small.js | node bin/center-code.js",
    "modules-used": "modules-used > modules-used.md",
    "issues": "git-issues",
    "commit": "git-issues && commit-wizard",
    "pkgfiles": "pkgfiles",
    "size": "tarball=\"$(npm pack .)\"; wc -c \"${tarball}\"; tar tvf \"${tarball}\"; rm \"${tarball}\";",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post",
    "next-update": "next-update -k true --tldr"
  },
  "bin": {
    "center": "./bin/center-code.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bahmutov/center-code.git"
  },
  "keywords": [
    "center",
    "code",
    "command",
    "line",
    "cli",
    "demo",
    "term",
    "terminal",
    "source"
  ],
  "author": "Gleb Bahmutov <gleb.bahmutov@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bahmutov/center-code/issues"
  },
  "homepage": "https://github.com/bahmutov/center-code#readme",
  "dependencies": {
    "bluebird": "3.0.5",
    "cardinal": "0.6.0",
    "check-more-types": "2.2.0",
    "debug": "2.2.0",
    "get-stdin-promise": "0.1.1",
    "lazy-ass": "1.1.0",
    "marked": "^0.3.5",
    "marked-terminal": "^1.6.1",
    "ramda": "0.18.0"
  },
  "devDependencies": {
    "describe-it": "1.7.0",
    "eslint": "1.10.1",
    "git-issues": "1.2.0",
    "mocha": "2.3.4",
    "modules-used": "1.2.0",
    "next-update": "0.9.5",
    "pkgfiles": "2.3.0",
    "pre-git": "1.3.1",
    "semantic-release": "6.0.3"
  },
  "files": [
    "bin",
    "index.js",
    "src/io.js"
  ],
  "config": {
    "pre-git": {
      "commit-msg": "validate-commit-msg",
      "pre-commit": [
        "npm run lint",
        "npm test",
        "npm run example",
        "npm run shebang",
        "npm run modules-used",
        "npm version"
      ],
      "pre-push": [
        "npm run size",
        "npm run pkgfiles"
      ],
      "post-commit": [
        "npm version"
      ],
      "post-merge": []
    }
  }
}
